generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id          String   @id @default(cuid())
  title       String
  description String?
  ingredients String   // newline-separated list for MVP
  steps       String
  cookMinutes Int?
  imageUrl    String?
  createdAt   DateTime @default(now())
}
